---
interface Props {
  sectionId: string;
  sectionName: string;
}

const { sectionId, sectionName } = Astro.props;
---

<section id={sectionId} class="wrapper">
  <h2 class="sec-title">{sectionName}</h2>
  <slot />
</section>

<style>
  .wrapper {
    max-width: 960px;
    margin: 0 auto 130px auto;
    font-size: 0.9rem;
    padding: 0 2rem;
  }

  .sec-title {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 64px;
  }
</style>
